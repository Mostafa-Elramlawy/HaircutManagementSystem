@page
@model HaircutManagementSystem.Pages.ServicesModel

<h2>Services</h2>

<form method="post">
    <div>
        <label for="Name">Service Name:</label>
        <input type="text" id="Name" name="Name" required />
    </div>
    <div>
        <label for="Price">Price:</label>
        <input type="number" id="Price" name="Price" required />
    </div>
    <button type="submit">Add Service</button>
</form>

<h3>Service List</h3>
<table>
    <thead>
        <tr>
            <th>Service Name</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var service in Model.Services)
        {
            <tr>
                <td>@service.Name</td>
                <td>@service.Price</td>
                <td>
                    <form method="post" action="/Services/Delete?id=@service.ID" style="display:inline;">
                        <button type="submit">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
