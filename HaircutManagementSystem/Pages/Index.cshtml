@page
@model HaircutManagementSystem.Pages.IndexModel
@{
    ViewData["Title"] = "Haircut System";
}

<div class="text-center">
    <h1 class="display-4">Welcome to the Haircut System</h1>
   @*  <p>Your go-to solution for managing customer appointments, barbers, and services.</p> *@

   @*  <div class="lead">
        <p>Manage and track daily appointments, employee performance, and revenue generated by each service!</p>
    </div> *@

    <!-- Navigation links -->
    <div>
        <a href="/Customers" class="btn btn-primary">Customers</a>
        <a href="/Barbers" class="btn btn-secondary">Barbers</a>
        <a href="/Services" class="btn btn-success">Services</a>
        <a href="/Appointments" class="btn btn-warning">Appointments</a>
    </div>

    <!-- Summary Statistics Section (Optional) -->
    <div class="stats mt-5">
        <h2>System Overview</h2>
        <div class="row">
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title">Total Customers</h3>
                        <p class="card-text">Manage and view customer data.</p>
                        <a href="/Customers" class="btn btn-info">View Customers</a>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title">Total Barbers</h3>
                        <p class="card-text">Manage barbers and their appointments.</p>
                        <a href="/Barbers" class="btn btn-info">View Barbers</a>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title">Services Offered</h3>
                        <p class="card-text">View and manage haircut services.</p>
                        <a href="/Services" class="btn btn-info">View Services</a>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title">Appointments</h3>
                        <p class="card-text">Manage and track customer appointments.</p>
                        <a href="/Appointments" class="btn btn-info">View Appointments</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
